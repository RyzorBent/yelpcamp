<% include ../partials/header %>
<div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Camp Meetings 2018
                    <p>present truth campers</p>
                    <p>
                        <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add New Campground</a>
                    </p>

                </h1>
            </div>
        </header>
        <div class="row text-center">
            <div class="col-lg-12">
                <h3>Our Most Popular Sites</h3>

                <% campgrounds.forEach(camp =>{ %>
                    <div class="col-md-3 col-sm-6">
                        <div class="thumbnail">
                            <img src="<%= camp.image %>" alt="">
                            <div class="caption">
                                <h4>
                                    <%= camp.name %>
                                </h4>
                            </div>
                            <p><a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a></p>
                        </div>

                    </div>
                    <% }); %>
            </div>
        </div>

        <% include ../partials/footer %>
    </div>